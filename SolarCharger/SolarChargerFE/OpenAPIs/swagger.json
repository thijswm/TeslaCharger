  "components": {
    "schemas": {
      "ChargeCurrentChangeViewModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "chargeSessionId": {
            "type": "string",
            "format": "uuid"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "current": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ChargeSessionViewModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "start": {
            "type": "string",
            "format": "date-time"
          },
          "end": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "batteryLevelStarted": {
            "type": "integer",
            "format": "int32"
          },
          "batteryLevelEnded": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "energyAdded": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "SettingsViewModel": {
        "required": [
          "enabled",
          "enoughSolarWatt",
          "homeWizardAddress",
          "maximumAmp",
          "minimumAmp",
          "minimumChargeDuration",
          "minimumCurrentDuration",
          "minimumInitialChargeDuration",
          "numberOfPhases",
          "pollTime",
          "solarMovingAverage",
          "teslaClientId",
          "teslaCommandsAddress",
          "teslaFleetAddress",
          "teslaRefreshToken",
          "vin"
        ],
        "type": "object",
        "properties": {
          "enabled": {
            "type": "boolean"
          },
          "homeWizardAddress": {
            "minLength": 1,
            "type": "string"
          },
          "solarMovingAverage": {
            "type": "string",
            "format": "date-span"
          },
          "enoughSolarWatt": {
            "type": "integer",
            "format": "int32"
          },
          "minimumAmp": {
            "type": "integer",
            "format": "int32"
          },
          "maximumAmp": {
            "type": "integer",
            "format": "int32"
          },
          "numberOfPhases": {
            "type": "integer",
            "format": "int32"
          },
          "minimumChargeDuration": {
            "type": "string",
            "format": "date-span"
          },
          "minimumCurrentDuration": {
            "type": "string",
            "format": "date-span"
          },
          "teslaFleetAddress": {
            "minLength": 1,
            "type": "string"
          },
          "teslaCommandsAddress": {
            "minLength": 1,
            "type": "string"
          },
          "teslaRefreshToken": {
            "minLength": 1,
            "type": "string"
          },
          "teslaClientId": {
            "minLength": 1,
            "type": "string"
          },
          "vin": {
            "minLength": 1,
            "type": "string"
          },
          "pollTime": {
            "type": "string",
            "format": "date-span"
          },
          "minimumInitialChargeDuration": {
            "type": "string",
            "format": "date-span"
          }
        },
        "additionalProperties": false
      },
      "StateViewModel": {
        "type": "object",
        "properties": {
          "state": {
            "$ref": "#/components/schemas/eState"
          }
        },
        "additionalProperties": false
      },
      "eState": {
        "enum": [
          "Idle",
          "Starting",
          "IsTeslaOnline",
          "TeslaOnline",
          "CheckSolarPower",
          "EnoughSolarPower",
          "StartCharge",
          "InitialCharging",
          "InitialChargeDurationReached",
          "MonitoringCharge",
          "MonitoringChargeDurationReached",
          "StopCharge"
        ],
        "type": "string"
      }
    }
  }
}